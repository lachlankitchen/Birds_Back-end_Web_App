doctype html
html(lang='en')
    head
        title COSC203: Birds of Aotearoa
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(rel='stylesheet', href='/styles/layout.css')
        link(rel='stylesheet', href='/styles/theme.css')
        link(rel='stylesheet', href='/styles/conservation-status.css')
        link(rel='stylesheet', href='/styles/cards.css')
        script(href='/scripts/script.js')
    body
        include templates/header.pug
        aside
            a(href=`/birds`)
                button Home

        main
            form(action=`/birds/edit/${bird._id}` method='POST' enctype='multipart/form-data')
                fieldset
                    legend Common Names

                    label(for='primary_name') Primary Name
                    input(type='text' name='primary_name' value=`${bird.primary_name}`)

                    label(for='english_name') English Name
                    input(type='text' name='english_name' value=`${bird.english_name}`)

                    label(for='other_names') Other Names
                    textarea(name="other_names", cols="10", rows="10" value=`${bird.other_names}`)

                fieldset
                    legend Taxonomy  

                    label(for='scientific_name') Scientific Name
                    input(type='text' name='scientific_name' value=`${bird.scientific_name}`)

                    label(for='order') Order
                    input(type='text' name='order' value=`${bird.order}`)

                    label(for='family') Family Name
                    input(type='text' name='family' value=`${bird.family}`)

                fieldset 
                    legend Size

                    label(for='length_value') Length (cm)
                    input(type='number' name='length_value' value=`${bird.size.length.value}`)
 
                    label(for='weight_value') Weight (g)
                    input(type='number' name='weight_value' value=`${bird.size.weight.value}`)
 
                fieldset
                    legend Conservation

                    label(for='status') Status
                    select(name='status' id='status')
                        option(selected) #{bird.status}
                        option(class="Not-Threatened") Not Threatened
                        option(class="Naturally-Uncommon") Naturally Uncommon
                        option(class="Relict") Relict
                        option(class="Recovering") Recovering
                        option(class="Declining") Declining
                        option(class="Nationally-Increasing") Nationally Increasing
                        option(class="Nationally-Vulnerable") Nationally Vulnerable
                        option(class="Nationally-Endangered") Nationally Endangered
                        option(class="Nationally-Critical") Nationally Critical
                        option(class="Data-Deficient") Data Deficient
                    
                fieldset 
                    legend Photo
                    
                    label(for='credit') Credit
                    input(type='text' name='credit' value=`${bird.photo.credit}`)

                    label(for='upload') Upload a new photo
                    input(type='file' name='upload' id='upload' value=`${bird.photo.source}`)

                    label(for='preview') Preview
                    img(id='preview' src='/birds/images/undefined' alt='Photo of ' value=`${bird.photo.preview}`)

                    input(type='text' name='source' id='source' value=`${bird.photo.source}` readonly="readonly")

                button(type='submit') Update Bird 

        include templates/footer.pug